{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "class-methods-use-this": "off",
        "import/no-dynamic-require": "off",
        "no-param-reassign": "off",
        "func-names": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off"
    }
}
